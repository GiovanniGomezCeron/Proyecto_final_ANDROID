<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".Validacion_pregunta">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Conteste la pregunta:"
            android:textColor="#3F51B5"
            android:textSize="22dp"
            app:fontFamily="@font/jockey_one" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/chewy"
            android:hint="Pregunta"
            app:boxStrokeColor="@color/colorRojo"
            app:hintTextColor="@color/colorRojo"
            app:startIconDrawable="@mipmap/edit"
            app:startIconTint="#0A0806">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:fontFamily="@font/chewy"
                android:textColor="@color/colorRojo" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:onClick="ValidarAnsw"
            android:text="Enviar"
            app:backgroundTint="@color/colorRojo"
            android:fontFamily="@font/faster_one"/>
    </LinearLayout>
</LinearLayout>